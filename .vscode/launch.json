{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Aira: Debug `doctor`",
      "type": "debugpy",
      "request": "launch",
      "module": "aira.cli",
      "args": [
        "doctor"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
        "name": "Aira: Debug `analyze`",
        "type": "debugpy",
        "request": "launch",
        "module": "aira.cli",
        "args": [
            "analyze",
            "path/to/your/event.yaml" // You can set a default event file for debugging
        ],
        "console": "integratedTerminal",
        "justMyCode": true
    }
  ]
}